<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ruben.easytransport" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ruben.easytransport.LoginFirst"
            android:label="@string/title_activity_menu_principal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ruben.easytransport.GestionDeRutas"
            android:label="@string/title_activity_gestion_de_rutas" >
        </activity>

        <fragment
            android:name=".VistaRutas"
            android:label="@string/title_activity_vista_rutas" >
        </fragment>
        <fragment
            android:name="AnadirAcuerdo"
            android:label="@string/title_activity_anadir_acuerdo" >
        </fragment>
        <fragment
            android:name="ListarAcuerdos"
            android:label="@string/title_activity_ListarAcuerdo" >
        </fragment>

        <activity
            android:name="com.example.ruben.easytransport.BusquedaRuta"
            android:label="@string/title_activity_busqueda_ruta" >
        </activity>
        <activity
            android:name="com.example.ruben.easytransport.ListarRuta"
            android:label="@string/title_activity_listar_ruta"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.ruben.easytransport.Anadir_acuerdo"
            android:label="@string/title_activity_anadir_acuerdo" >
        </activity>
        <activity
            android:name="com.example.ruben.easytransport.MisRutas"
            android:label="@string/title_activity_mis_rutas" >
        </activity>
        <activity
            android:name="com.example.ruben.easytransport.NuevoAcuerdo"
            android:label="@string/title_activity_nuevo_acuerdo" >
        </activity>
        <activity
            android:name="com.example.ruben.easytransport.AcuerdoPropuesto"
            android:label="@string/title_activity_acuerdo_propuesto" >
        </activity>
        <activity
            android:name="com.example.ruben.easytransport.MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
    </application>

</manifest>
