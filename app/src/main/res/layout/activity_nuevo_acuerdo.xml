<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ruben.easytransport.NuevoAcuerdo"
    android:background="#49fffa8c">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:text="@string/Origen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textOrigen"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/lista1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#610B0B"
                android:textSize="20dp" />

            <EditText
                android:layout_width="327dp"
                android:hint="@string/textoOrigen"
                android:layout_height="wrap_content"
                android:id="@+id/TextOrigen"
                android:layout_below="@+id/textDestino"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:background="#ffffffff" />

            <TextView
                android:text="@string/Destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textDestino"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/TextOrigen"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:textColor="#610B0B" />

            <EditText
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:hint="@string/textoDestino"
                android:id="@+id/TextDestino"
                android:layout_below="@+id/textDestino"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:background="#ffffffff" />

            <TextView
                android:text="@string/Fecha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textFecha"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/TextDestino"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#610B0B"
                android:textSize="20dp" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:spinnersShown="true"
                android:calendarViewShown="false"
                android:layout_gravity="center"
                android:clickable="true" />

            <TextView
                android:text="@string/Hora"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textHora"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/datePicker"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#610B0B"
                android:textSize="20dp" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePicker"
                android:layout_gravity="center"
                />

            <TextView
                android:text="@string/Comentario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textComentario"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/timePicker"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#610B0B"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTComentario"
                android:layout_below="@+id/textComentario"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:background="#ffffffff"
                android:layout_marginBottom="30dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÃ±adir ruta"
                android:layout_below="@+id/editTComentario"
                android:id="@+id/button_volver"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonOnClick"
                android:background="@drawable/border_button"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
