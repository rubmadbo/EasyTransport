<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ruben.easytransport.VistaRutas">

    <Button
        android:onClick="botonOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Anyadir"
        android:id="@+id/buttonAnyadir"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/buttonAnyadir"
        android:stretchColumns="*"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff3b3b3b">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Origen"
                android:id="@+id/textOrigen"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Destino"
                android:id="@+id/textDestino"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Fecha"
                android:id="@+id/textFecha"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Hora"
                android:id="@+id/textHora"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:layout_column="4" />

        </TableRow>

        <TableRow
            android:id="@+id/SeparadorCabecera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffff2424">

            <FrameLayout
                android:id="@+id/LineaCabecera"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_span="7"
                android:background="#ffff4a3e"
                android:layout_marginTop="3dp">
            </FrameLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="false">>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Valencia"
                android:id="@+id/textView1"
                android:layout_column="0"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Madrid"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="01/10/2014"
                android:id="@+id/textView3"
                android:layout_column="2"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="17:07"
                android:id="@+id/textView4"
                android:layout_column="4"
                android:layout_gravity="center" />

        </TableRow>

        <TableRow
            android:id="@+id/SeparadorFila1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff000000">

            <FrameLayout
                android:id="@+id/LineaFila1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_span="7"
                android:background="#ff000000"
                android:layout_marginTop="1dp">
            </FrameLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Murcia"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alicante"
                android:id="@+id/textView6"
                android:layout_column="1"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="10/10/2014"
                android:id="@+id/textView7"
                android:layout_column="2"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="14:00"
                android:id="@+id/textView8"
                android:layout_column="4"
                android:layout_gravity="center" />

        </TableRow>

        <TableRow
            android:id="@+id/SeparadorFila2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff000000">

            <FrameLayout
                android:id="@+id/LineaFila2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_span="7"
                android:background="#ff000000"
                android:layout_marginTop="1dp">
            </FrameLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Valencia"
                android:id="@+id/textView9"
                android:layout_column="0"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Barcelona"
                android:id="@+id/textView10"
                android:layout_column="1"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="20/10/2014"
                android:id="@+id/textView11"
                android:layout_column="2"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="09:00"
                android:id="@+id/textView12"
                android:layout_column="4"
                android:layout_gravity="center" />

        </TableRow>
    </TableLayout>
</RelativeLayout>

