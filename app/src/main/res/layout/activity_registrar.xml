<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ruben.easytransport.registrar"
    android:background="#49fffa8c"
    android:id="@+id/nombre">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EntrarNombre"
                android:padding="10dp"
                android:hint="Nombre"
                android:layout_margin="10dp"
                android:textColorHint="#cccccc"
                android:drawableLeft="@drawable/user"
                android:background="#ffffffff"
                android:paddingBottom="10dp"
                android:paddingRight="10dp" />



            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EntrarApellidos"
                android:padding="10dp"
                android:hint="Apellidos"
                android:textColorHint="#cccccc"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/user"
                android:background="#ffffffff"
                android:paddingBottom="10dp"
                android:paddingRight="10dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/EntrarContrasena"
                android:hint="Contraseña"
                android:textColorHint="#cccccc"
                android:password="true"
                android:drawableLeft="@drawable/password"
                android:background="#ffffffff" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/RepetirContrasena"
                android:hint="Repetir Contraseña"
                android:textColorHint="#cccccc"
                android:password="true"
                android:drawableLeft="@drawable/password"
                android:background="#ffffffff" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Email"
                android:textColorHint="#cccccc"
                android:drawableLeft="@drawable/icon_email"
                android:background="#ffffffff"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:id="@+id/EntrarEmail" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="Acepto terminos y condiciones de uso."
                android:id="@+id/checkBox"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />


            <Button
                android:id="@+id/btnregistrar"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonOnClick"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Registrarme"
                android:background="#b1e7bdff"
                android:textSize="14dp"
                android:layout_below="@+id/linearLayout" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
